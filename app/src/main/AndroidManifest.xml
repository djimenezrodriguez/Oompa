<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.napptilus.oompaloompa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".OompaWorkersApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_wonkaicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OompaLoompa">
        <activity
            android:name="com.napptilus.oompaloompa.presentation.splashOompa.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OompaLoompa.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.napptilus.oompaloompa.WorkersActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OompaLoompa.NoActionBar"></activity>
    </application>

</manifest>